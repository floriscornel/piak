{
	"name": "piak",
	"module": "src/cli/cli.ts",
	"type": "module",
	"bin": {
		"piak": "./src/cli/cli.ts"
	},
	"scripts": {
		"bump": "bunx npm-check-updates -p bun -ui",
		"check": "tsc --noEmit",
		"ci": "biome check --write && tsc --noEmit && vitest run --coverage --config vitest.config.ts",
		"coverage": "vitest run --coverage --config vitest.config.ts",
		"dev": "bun run src/cli/cli.ts",
		"lint": "biome check --write src",
		"test": "vitest --config vitest.config.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bun": "1.2.12",
		"@vitest/coverage-v8": "^3.1.3",
		"vitest": "^3.1.3"
	},
	"peerDependencies": {
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@scalar/openapi-parser": "^0.10.17",
		"@scalar/openapi-types": "^0.2.2",
		"chalk": "^5.4.1",
		"commander": "^13.1.0",
		"handlebars": "^4.7.8",
		"zod": "^3.24.4"
	}
}